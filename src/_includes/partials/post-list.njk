{% if postListItems.length %}
  <section>
    <div>
      <h2 class="mt-0 md:mt-0 lg:mt-0">{{ postListHeading }}</h2>
      <ol class="list-none p-0 md:p-0 lg:p-0 space-y-6 lg:space-y-8">
        {% for item in postListItems %}
          {% if item.date.getTime() <= global.now %}
            <li class="p-0 md:p-0 lg:p-0">
              <a class="text-xl lg:text-2xl" href="{{ item.url }}" rel="bookmark">{{ item.data.title }}</a>
              <div class="text-base">
                <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
